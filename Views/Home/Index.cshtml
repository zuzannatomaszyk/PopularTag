@model List<TagModel>
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">1000 najpopularniejszych tagów na StackOverflow</h1>
   

   <div class="table-responsive">
    <table class="ResultTable">
        <tr>
            <th>Lp.</th>
            <th>Nazwa</th>
            <th>Liczba wystąpień</th>
            <th>Procent wystąpień</th>
        </tr>
    @{int i = 1;}
    @foreach (var item in Model)
    {
        <tr>
             <td>
                <span>@(i++)</span>
            </td>
            <td>
                @item.name
            </td>
            <td>
                @item.count
            </td>
             <td>
                @item.percentage %
            </td>
        </tr>
    }
    </table>
</div>

</div>
